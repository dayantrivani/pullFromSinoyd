{
  "name": "vue-lims",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vue-cli-service serve",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint --fix --ext .js,.vue src"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.6.3",
    "@handsontable/vue": "^3.1.0",
    "@tinymce/tinymce-vue": "^1.1.1",
    "animate.css": "^3.7.0",
    "axios": "^0.18.0",
    "crypto-js": "^3.1.9-1",
    "echarts": "^4.1.0",
    "element-ui": "^2.7.2",
    "handsontable": "^6.2.2",
    "pinyin": "^2.8.3",
    "tinymce": "^4.9.2",
    "vue": "^2.5.21",
    "vue-router": "^3.0.1",
    "vue-wechat-title": "^2.0.5",
    "vuedraggable": "^2.17.0",
    "vuex": "^3.0.1",
    "wangeditor": "^3.1.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.3.0",
    "@vue/cli-plugin-eslint": "^3.3.0",
    "@vue/cli-service": "^3.3.0",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-component": "^1.1.1",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^8.1.0",
    "mockjs": "^1.0.1-beta3",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.1",
    "vue-skeleton-webpack-plugin": "^1.2.2",
    "vue-template-compiler": "^2.5.21"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "airbnb-base"
    ],
    "plugins": [
      "vue"
    ],
    "rules": {
      "eqeqeq": 1,
      "no-plusplus": 0,
      "no-mixed-operators": 0,
      "max-len": [
        1,
        {
          "code": 120
        }
      ],
      "no-shadow": 0,
      "no-underscore-dangle": 0,
      "prefer-const": 1,
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "ignore"
        }
      ],
      "import/extensions": 0,
      "no-param-reassign": [
        "error",
        {
          "props": true,
          "ignorePropertyModificationsFor": [
            "Vue",
            "config",
            "e",
            "el",
            "event",
            "v",
            "vm",
            "state",
            "tree"
          ]
        }
      ],
      "import/no-extraneous-dependencies": 0,
      "no-debugger": 1,
      "import/no-unresolved": 0,
      "no-console": 1,
      "no-multi-spaces": 0,
      "quote-props": 0,
      "vue/valid-v-for": 0
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
